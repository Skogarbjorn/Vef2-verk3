generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categories {
  id        Int        @id @default(autoincrement())
  title     String     @unique
  slug      String     @unique
  Questions Questions[]
}

model Questions {
  id         Int        @id @default(autoincrement())
  question   String
  category   Categories @relation(fields: [categoryId], references: [id])
  categoryId Int        
  answers    Answers[]
}

model Answers {
  id         Int       @id @default(autoincrement())
  answer     String
  isCorrect  Boolean
  question   Questions @relation(fields: [questionId], references: [id])
  questionId Int       
}
